extends html_template.pug 

block content 
    .container
        .col.d-flex.justify-content-center
            form.form-signin(method="POST" action="/auth/register")
                h1.h3.mb-3.font-weight-normal Please register
                label.sr-only(for='inputEmail') Email address
                input#inputEmail.form-control(type='text' placeholder='Username' required='' autofocus='' name="username")
                label.sr-only(for='inputPassword') Password
                input#inputPassword.form-control(type='password' placeholder='Password' required='' name="password")
                br
                input.btn.btn-lg.btn-primary.btn-block(type='submit' value="Register")